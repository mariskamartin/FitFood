<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fitfood_green</item>
        <item name="colorPrimaryDark">@color/fitfood_dark_green</item>
    </style>

    <!-- Main activity theme. -->
    <style name="FitFoodTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.FitFood.WithTitle</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.FitFood.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>
    <style name="ActionBar.Solid.FitFood.WithTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <!-- Style for forecast listview -->
    <style name="FitFoodListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <style name="SettingsTheme"></style>

</resources>
